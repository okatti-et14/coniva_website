<div class="main">
  <div class="contents">
    <p id="notice"><%= notice %></p>
    <% @page_title = "#{@article.title}" %>
    <h1 class="show">
      <%= @article.title %>
    </h1>
    <%= image_tag aricle_image_select(@article) %>
    <br><br>
    <font size="2"><%= @article.memo %></font>
    <br>
    <% if logged_in? %>
    <%= link_to "編集", edit_article_path(@article) %>
    <%= link_to "削除", @article, method: :delete, data: { confirm: "消しちゃうよ?????" } %>
    <% end %>
    <br>
    <%= link_to "一覧へ戻る", articles_path %>
  </div>
</div>