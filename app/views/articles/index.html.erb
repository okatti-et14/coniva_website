<div class="top">
  <div>
    <%= image_tag "top.jpg" %>
  </div>
</div>
<div class="index">  
  <div class="box">
    <iframe class="youtube" width="360" height="202.5" src="https://www.youtube.com/embed/playlist?list=PLMckSf_YLzhWpxwxpk86XWcthHQmzooA3" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
  </div>
  <div class="box">
    <div class="contents">
      <p id="notice"><%= notice %></p>
      <% if logged_in? %>
        <%= link_to "ログアウト", login_foodandfood_path, method: :delete %>
        <%= link_to "新規作成", new_article_path %>
      <% end %>
      <h1 class="main">サークルからのお知らせ</h1>
        <div class="articles">
          <% @articles.each do |article| %>
            <div class="article">
              <%= link_to article do %>
                <%= image_tag aricle_image_select(article) %>
                <div>
                  <p><%= article.title %></p>
                  <p class="datetime"><%= article.created_at.strftime("%Y/%m/%d/ %H:%M") %></p>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="box">
      <a class="twitter-timeline" data-width="360" data-theme="dark" data-tweet-limit="5" href="https://twitter.com/ibadaichuunan?ref_src=twsrc%5Etfw">Tweets by ibadaichuunan</a> 
      <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
    </div>
</div>